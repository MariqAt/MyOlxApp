<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.ittalents.myfirstaplication.AdminControlPanelActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Control Panel"
        android:textSize = "25sp"
        android:gravity = "center"
        android:background="@color/colorAccent"

        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="151dp"
        android:layout_gravity = "center"
        android:layout_height="87dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/admin" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Approve Pending Ads"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/colorPrimary"

        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Spinner
        android:id="@+id/approve_pending_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/active_ads"
        android:background="@color/colorDark" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Delete Ad"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Spinner
        android:id="@+id/delete_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/active_ads"
        android:background="@color/colorDark" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Archive Ad"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/colorPrimary"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Spinner
        android:id="@+id/archive_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/active_ads"
        android:background="@color/colorDark" />
    <Button
        android:id="@+id/review_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Review Messages"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/colorPrimary"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>



</LinearLayout>
