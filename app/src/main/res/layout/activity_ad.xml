<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_activity"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.ittalents.myfirstaplication.AdActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ad View"
        android:textSize = "25sp"
        android:gravity = "center"
        android:background="@drawable/button3"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:src="@drawable/ad" />

            <TextView
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="Text"
                android:textColor="@color/colorDark" />

            <TextView
                android:id="@+id/ad_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="Price"
                android:textColor="@color/colorDark" />

            <TextView
                android:id="@+id/ad_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="Description"
                android:textColor="@color/colorDark" />

            <TextView
                android:id="@+id/ad_seller_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="Seller"
                android:textColor="@color/colorDark" />

            <TextView
                android:id="@+id/ad_contact_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="Contact Info"
                android:textColor="@color/colorDark" />


            <TextView
                android:id="@+id/ad_mail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="E-mail"
                android:textColor="@color/colorDark" />


            <TextView
                android:id="@+id/ad_data"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:hint="Data"
                android:textColor="@color/colorDark" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
